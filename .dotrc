# Set the editor to use when editing Dotify dotfiles.
#   Default: "vim"
#   Options: "vi", "vim", "emacs", "[ANY OTHER TERMINAL BASED EDITOR]"

editor: "nano"

# Ignoring files in ~/.dotify when linking:

ignore:
  dotify:
  - ".git"
  - ".gitignore"
  - ".gitmodules"
  dotfiles:
  - ".bash_history"
  - ".dropbox"
  - ".gem"
  - ".heroku"
  - ".ievms"
  - ".irb_history"
  - ".mocksmtp"
  - ".npm"
  - ".oh-my-zsh"
  - ".pow"
  - ".pry_history"
  - ".psql_history"
  - ".rbenv"
  - ".rdebug_hist"
  - ".rediscli_history"
  - ".ssh"
  - ".zsh-update"
  - ".zsh_history"
