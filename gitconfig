[user]
  name = Avand Amiri
  email = avand@avandamiri.com

[github]
  user = avand

[core]
  excludesfile = ~/.gitignore
  autocrlf     = input
  ignorecase   = false
  pager        = "diff-so-fancy | less --tabs=4 -RFX"

[diff]
  # For Github-style word diffs
  wordRegex = [^[:space:]]
  compaction-heuristic = true

[color]
  ui          = auto
  diff        = auto
  interactive = auto
  status      = auto
  branch      = auto

[color "diff-highlight"]
  oldNormal     = "red bold"
  oldHighlight  = "red bold 52"
  newNormal     = "green bold"
  newHighlight  = "green bold 22"

[push]
  default = current

[fetch]
  prune = true

[rebase]
  autosquash = true

[alias]
  s   = status -sb
  st  = status
  f   = fetch
  ra  = !git r --all
  r   = !GIT_NO_PAGER=1 git l -30
  la  = !git l --all
  l   = "!. ~/.githelpers && pretty_git_log"
  d   = diff
  dc  = diff --cached
  co  = checkout
  com = checkout master
  cob = checkout -b
  b   = branch
  c   = commit -m
  ca  = commit -a -m
  ci  = commit
  cp  = commit -am 'cp'
  amen = amend --no-edit
  w   = whatchanged
  sl  = shortlog -s -n
  up  = "!git fetch && git rebase origin/master"
  bc  = "!f() { git branch --merged ${1-master} | grep -v " ${1-master}$" | xargs git branch -d; }; f"
  bd  = "!f() { git checkout ${1-master} && git up && git bc ${1-master}; }; f"

[filter "media"]
  required = true
  clean = git media clean %f
  smudge = git media smudge %f

[filter "hawser"]
  clean = git hawser clean %f
  smudge = git hawser smudge %f
  required = true

[filter "lfs"]
  clean = git lfs clean %f
  smudge = git lfs smudge %f
  required = true
